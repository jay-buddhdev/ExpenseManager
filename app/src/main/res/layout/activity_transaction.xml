<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/relay_acc_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_back_transaction"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_arrow"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/txtaccname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Account Name"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:paddingTop="13dp"
            android:layout_marginStart="8dp"

            android:textAlignment="viewStart"
            />
    </LinearLayout>
  <TableLayout
      android:id="@+id/tbllayout"
      android:layout_width="match_parent"
      android:layout_height="600dp"
      android:layout_below="@id/relay_acc_name"
      android:stretchColumns="1,2,3,4">
      <TableRow>

          <TextView
              android:layout_width="50dp"
              android:layout_column="1"
              android:background="@drawable/border"
              android:padding="10dp"
              android:text="Date"
              android:textAlignment="center"
              android:textColor="@color/black"
              android:textSize="15sp"
              android:textStyle="bold"

              />
          <TextView
              android:layout_width="85dp"
              android:text="Description"
              android:textSize="15sp"
              android:textColor="@color/black"
              android:textStyle="bold"
              android:padding="10dp"
                android:textAlignment="center"
              android:layout_column="1"
              android:background="@drawable/border"
              />
          <TextView
              android:layout_width="40dp"
              android:text="Amount"
              android:textSize="15sp"
              android:textColor="@color/black"
              android:textStyle="bold"
              android:padding="10dp"
              android:layout_column="1"
                android:textAlignment="center"
              android:background="@drawable/border"
              />
          <TextView
              android:layout_width="40dp"
              android:text="Balance"
              android:textSize="15sp"
              android:textColor="@color/black"
              android:textStyle="bold"
              android:padding="10dp"
              android:layout_column="1"
              android:textAlignment="center"
              android:background="@drawable/border"

              />

      </TableRow>
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recycle_table"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

          />

  </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tbllayout"
        android:background="@color/black"
        android:alpha="0.5"
        />
    <TextView
        android:id="@+id/txtbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance:"
        android:layout_below="@id/tbllayout"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtbalanceview"
        android:text="$5000"
        android:layout_below="@id/tbllayout"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/txtbalance"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_add_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="#1565C0"
        android:src="@drawable/ic_baseline_add_24"
        app:elevation="30dp"
        app:fabSize="normal"
        app:tint="@color/white" />

</RelativeLayout>